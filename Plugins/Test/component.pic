int r = 0;
int dr = 1;

behavior draw
{
	clear(color((byte)(r % 255), 0, 0));
}

behavior tick
{
	r += dr;
	if (r > 255)
		r = 0;
}

behavior key
{
	if (keys == Keys.A)
		dr--;
	else if (keys == Keys.S)
		dr++;
	if (dr <= 0)
		dr = 1;
	else if (dr >= 8)
		dr = 8;
}

behavior load
{
	create component
	create square
	create square
	create square
	create square
}